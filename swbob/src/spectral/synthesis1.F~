      subroutine synthesis1(sc,fc,P,m)
      implicit none

#include <dims.h>
#include <nltptrs.h>
#include <stptrs.h>

      INT_TYPE m

      REAL_TYPE sc(0:1,nsp,m:nn,plev)
      REAL_TYPE fc(0:1,nlat2,nsyn,0:1,plev)
      REAL_TYPE P(nlat2,0:nn+1)

      INT_TYPE j,k,n,ioe
      do k=1,plev
         do ioe=0,1
            do n=m+ioe,nn,2
               do j=1,nlat2

                  fc(0,j,vor_p,ioe,k)=fc(0,j,1,ioe,k)+ sc(0,vor_p,n,k)*P(j,n)
                  fc(1,j,vor_p,ioe,k)=fc(1,j,1,ioe,k)+ sc(1,vor_p,n,k)*P(j,n)

               end do
            end do
         end do
         call symb(fc(0,1,1,0,k))
      end do

      end 

